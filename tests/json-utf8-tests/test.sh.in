#!/bin/sh

status=0

check() {
	if [ $? = "0" ]; then
		echo "PASS: $*"
	else
		echo "FAIL: $*"
		status=1
	fi
}

NMSG_MSGMOD_DIR="@abs_top_builddir@/nmsg/base/.libs"
export NMSG_MSGMOD_DIR
NMSGTOOL="@abs_top_builddir@/src/nmsgtool"
FILES="overlong2.nmsg \
	overlong3.nmsg \
	overlong4.nmsg \
	straycont.nmsg \
	truncated.nmsg"
NMSG_PAYLOADS_DIR="@abs_top_srcdir@/tests/json-utf8-tests"

for f in $FILES; do
	$NMSGTOOL -r $NMSG_PAYLOADS_DIR/$f -J - | fgrep -q "ï¿½"
	check $f
done

exit $status
