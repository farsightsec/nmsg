#!/bin/sh

CRC32C_TEST="@abs_top_builddir@/libmy/crc32c_test"
NMSG_MSGMOD_DIR="@abs_top_builddir@/nmsg/base/.libs"
export NMSG_MSGMOD_DIR
NMSGTOOL="@abs_top_builddir@/src/nmsgtool"
PAYLOAD_DIR="@abs_top_srcdir@/tests/payload-crc32c-tests"

ERR="^libnmsg: WARNING: crc mismatch"

# test vectors
$CRC32C_TEST

n="CRC32C absent #1"
x="$PAYLOAD_DIR/test_crc32c_absent.nmsg"
if $NMSGTOOL --nmsgversion 2 -r $x -w /dev/null 2>&1 | grep -q "$ERR"; then
    echo "FAIL: $n"
else
    echo "PASS: $n"
fi

n="CRC32C absent #2"
x="$PAYLOAD_DIR/test_crc32c_absent.nmsg"
if $NMSGTOOL --nmsgversion 2 -r $x -o /dev/null 2>&1 | grep -q "$ERR"; then
    echo "FAIL: $n"
else
    echo "PASS: $n"
fi

n="CRC32C regeneration #1"
x="$PAYLOAD_DIR/test_crc32c_absent.nmsg"
if $NMSGTOOL --nmsgversion 2 -r $x -w - | $NMSGTOOL --nmsgversion 2 -r - -w /dev/null 2>&1 | grep -q "$ERR"; then
    echo "FAIL: $n"
else
    echo "PASS: $n"
fi

n="CRC32C regeneration #2"
x="$PAYLOAD_DIR/test_crc32c_absent.nmsg"
if $NMSGTOOL --nmsgversion 2 -r $x -w - | $NMSGTOOL --nmsgversion 2 -r - -o /dev/null 2>&1 | grep -q "$ERR"; then
    echo "FAIL: $n"
else
    echo "PASS: $n"
fi

n="CRC32C present and correct #1"
x="$PAYLOAD_DIR/test_crc32c_correct.nmsg"
if $NMSGTOOL --nmsgversion 2 -r $x -w /dev/null 2>&1 | grep -q "$ERR"; then
    echo "FAIL: $n"
else
    echo "PASS: $n"
fi

n="CRC32C present and correct #2"
x="$PAYLOAD_DIR/test_crc32c_correct.nmsg"
if $NMSGTOOL --nmsgversion 2 -r $x -o /dev/null 2>&1 | grep -q "$ERR"; then
    echo "FAIL: $n"
else
    echo "PASS: $n"
fi

n="CRC32C present and incorrect #1"
x="$PAYLOAD_DIR/test_crc32c_incorrect.nmsg"
if $NMSGTOOL --nmsgversion 2 -r $x -w /dev/null 2>&1 | grep -q "$ERR"; then
    echo "PASS: $n"
else
    echo "FAIL: $n"
fi

n="CRC32C present and incorrect #2"
x="$PAYLOAD_DIR/test_crc32c_incorrect.nmsg"
if $NMSGTOOL --nmsgversion 2 -r $x -o /dev/null 2>&1 | grep -q "$ERR"; then
    echo "PASS: $n"
else
    echo "FAIL: $n"
fi
